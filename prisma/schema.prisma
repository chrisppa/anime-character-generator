generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(uuid())
  email     String  @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  jobs      Job[]
  loras     Lora[]
  events    Event[]
}

model Lora {
  id        String   @id @default(uuid())
  name      String
  description String? @db.Text
  tags      String[]
  nsfw      Boolean  @default(false)
  modelType LoraType @default(LORA)
  baseModel String?
  resourceHashes Json?
  fileKey   String   // R2 object key
  sizeBytes Int?
  trainingDataKey String?
  trainingDataSizeBytes Int?
  coverKey  String?
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  jobs      Job[]
  // engagement
  downloads   Int      @default(0)
  ratingSum   Int      @default(0)
  ratingCount Int      @default(0)
  favorites   Favorite[]
  ratings     Rating[]
  createdAt DateTime @default(now())
}

enum LoraType {
  CHECKPOINT
  LORA
  TEXTUAL_INVERSION
  VAE
  OTHER
}

model Event {
  id           String    @id @default(uuid())
  title        String
  description  String?   @db.Text
  type         EventType @default(CONTEST)
  startAt      DateTime
  endAt        DateTime
  participants Int?
  prizePool    String?
  url          String?
  coverKey     String?
  userId       String?
  user         User?     @relation(fields: [userId], references: [id])
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

enum EventType {
  CONTEST
  AWARDS
  RESULTS
  OTHER
}

model Job {
  id             String   @id @default(uuid())
  prompt         String
  type           String   // txt2img | img2img | inpainting
  status         String   @default("queued") // queued | running | succeeded | failed
  provider       String
  providerJobId  String?
  imageUrl       String?
  error          String?
  userId         String?
  user           User?    @relation(fields: [userId], references: [id])
  loraId         String?
  lora           Lora?    @relation(fields: [loraId], references: [id])
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  assets         Asset[]
}

model Asset {
  id        String   @id @default(uuid())
  url       String
  jobId     String
  job       Job      @relation(fields: [jobId], references: [id])
  createdAt DateTime @default(now())
}

model Favorite {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  loraId    String
  lora      Lora     @relation(fields: [loraId], references: [id])
  createdAt DateTime @default(now())

  @@unique([userId, loraId])
}

model Rating {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  loraId    String
  lora      Lora     @relation(fields: [loraId], references: [id])
  value     Int
  createdAt DateTime @default(now())

  @@unique([userId, loraId])
}
